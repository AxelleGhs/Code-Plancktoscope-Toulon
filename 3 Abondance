#3
#Abondance
#Calcul de l'abondance Ã  partir d'un dossier d'un ou plusieurs fichiers Excel obetnu Ã  partir du script DÃ©nombrement et du fichier mÃ©tadonnÃ©es obtenu Ã  partir du script MÃ©tadonnÃ©es contenant les donnÃ©es des fichiers TSV utilisÃ©s pour le dÃ©nombrement
#Toujours mettre les fichier ensemble dans un seul dossier pour que cela soit rapide
#A la sortie on obtient un fichier excel avec toutes les abondances totales.
#L'abondance est calculÃ©e Ã  partir de la formule du script de "pkscoperoutine" que l'on peut retrouver ici --> https://github.com/pkostyrka/pkscoperoutine 



# ğŸ“¦ Chargement des bibliothÃ¨ques
library(readxl)
library(writexl)
library(dplyr)
library(stringr)

# ğŸ“ SÃ©lection dâ€™un fichier du dossier contenant les fichiers Excel
un_fichier_du_dossier <- file.choose()
dossier_donnees <- dirname(un_fichier_du_dossier)

# ğŸ“„ SÃ©lection du fichier de mÃ©tadonnÃ©es
fichier_metadonnees <- file.choose()

# ğŸ“¥ Lecture du fichier de mÃ©tadonnÃ©es
metadonnees <- read_excel(fichier_metadonnees)
metadonnees$object_date <- as.Date(metadonnees$object_date)

# âŒ Liste des taxons Ã  exclure
taxons_exclus <- c(
  "aggregates", "badfocus", "bubble", "dark", "detritus", "fiber", "light",
  "nauplii-molt", "part", "pollen", "transparent"
)

# ğŸ—ƒ Initialisation du tableau final
resultats <- data.frame(Date = character(), Abondance_totale = numeric(), Fichier = character(), stringsAsFactors = FALSE)

# ğŸ” Liste et traitement de tous les fichiers Excel du dossier
fichiers <- list.files(path = dossier_donnees, pattern = "\\.xlsx$", full.names = TRUE)

# ğŸ” Dictionnaire de correspondance nom â†’ sample_project
site_map <- list(
  "GR" = "Etude_GrandeRade",
  "PR" = "Etude_PetiteRade",
  "PortToulon" = "Etude_PortToulon"
)

for (fichier in fichiers) {
  
  nom_fichier <- basename(fichier)
  
  # ğŸ¯ Extraction de la date (JJMMAAAA) et conversion en format Date
  date_texte <- str_extract(nom_fichier, "(?<=_)\\d{8}")
  if (is.na(date_texte)) {
    warning(paste("âŒ Date non dÃ©tectÃ©e dans le fichier :", nom_fichier))
    next
  }
  date_formatee <- paste0(substr(date_texte, 1, 2), "/", substr(date_texte, 3, 4), "/", substr(date_texte, 5, 8))
  date_r <- as.Date(date_formatee, format = "%d/%m/%Y")
  
  # ğŸ· Identifier le site en prenant tout ce qui est avant le "_"
  site_nom <- str_extract(nom_fichier, "^[^_]+")  # ex: "GR", "PR", "PortToulon"
  if (!(site_nom %in% names(site_map))) {
    warning(paste("âŒ Code site inconnu :", site_nom, "dans le fichier :", nom_fichier))
    next
  }
  sample_project <- site_map[[site_nom]]
  
  # ğŸ” Filtrer les mÃ©tadonnÃ©es correspondant Ã  la date et au site
  ligne_meta <- metadonnees %>%
    filter(object_date == date_r, sample_project == sample_project)
  
  if (nrow(ligne_meta) == 0) {
    warning(paste("âš ï¸ Aucune mÃ©tadonnÃ©e pour", sample_project, "Ã  la date", date_r, "â†’ fichier ignorÃ© :", nom_fichier))
    next
  }
  if (nrow(ligne_meta) > 1) {
    warning(paste("âš ï¸ Plusieurs entrÃ©es pour", sample_project, "Ã  la date", date_r, "â†’ premiÃ¨re utilisÃ©e."))
    ligne_meta <- ligne_meta[1, ]
  }
  
  # ğŸ“Š Lecture des donnÃ©es
  donnees <- read_excel(fichier)
  if (nrow(donnees) == 0) {
    warning(paste("âš ï¸ Fichier vide :", nom_fichier))
    next
  }
  
  # ğŸ§® Calcul des moyennes des triplicats (col 2 Ã  4)
  donnees$Moyenne <- rowMeans(donnees[, 2:4], na.rm = TRUE)
  
  # ğŸ”¢ Calcul du coefficient avec les colonnes fournies
  Vtot  <- ligne_meta$Prelevement_total_volume_m3
  Vconc <- ligne_meta$Prelevement_concentrated_volume_m3
  Fdil  <- ligne_meta$sample_dilution_factor
  Vima  <- ligne_meta$acq_imaged_volume_m3
  
  coefficient <- Vconc /( Fdil * Vima * Vtot)
  
  # ğŸ“ˆ Calcul des abondances ligne par ligne
  donnees$Abondance <- donnees$Moyenne * coefficient
  
  # ğŸš« Suppression des taxons Ã  exclure
  donnees_filtrees <- donnees %>% filter(!(donnees[[1]] %in% taxons_exclus))
  
  # â• Somme des abondances restantes
  abondance_totale <- sum(donnees_filtrees$Abondance, na.rm = TRUE)
  
  # ğŸ“ Enregistrement du rÃ©sultat avec nom du fichier
  resultats <- rbind(
    resultats,
    data.frame(
      Date = format(date_r, "%d/%m/%Y"),
      Abondance_totale = abondance_totale,
      Fichier = nom_fichier
    )
  )
  
  message("âœ… Fichier traitÃ© :", nom_fichier, " | Abondance totale :", round(abondance_totale, 2))
}

# ğŸ’¾ Export du fichier final
fichier_sortie <- file.path(dossier_donnees, "Abondance_totale_resultats.xlsx")
write_xlsx(resultats, fichier_sortie)

cat("\nğŸ‰ RÃ©sultats enregistrÃ©s avec succÃ¨s dans :", fichier_sortie, "\n")

