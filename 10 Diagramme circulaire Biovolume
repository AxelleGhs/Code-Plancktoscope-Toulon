# ğŸ“ Dossier contenant les fichiers CSV
folder_path <- "~/Desktop/RÃ©sultats Stage Final/bv_computes/CSV"
all_files <- list.files(folder_path, pattern = "\\.csv$", full.names = TRUE)

# ğŸ¨ Palette couleurs par Groupe
palette_groupes <- c(
  "DiatomÃ©e" = "#1f78b4",
  "Copepode" = "#33a02c",
  "DinoflagellÃ©" = "#e31a1c",
  "CiliÃ©" = "#ff7f00",
